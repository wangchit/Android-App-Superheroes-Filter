<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <CheckBoxPreference
        android:defaultValue="true;"
        android:key="pref_display_button"
        android:summary="@string/show_whatis_button_details"
        android:title="@string/show_whatis_button" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/show_planet_type"
        android:entryValues="@array/show_planet_id"
        android:key="pref_selected_show"
        android:summary="%s"
        android:title="@string/type_show_title"
        >
    </ListPreference>

</PreferenceScreen>